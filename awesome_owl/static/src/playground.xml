<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="awesome_owl.playground">
        <div class="p-3 d-flex gap-2 align-items-center">
            <Counter value="2" onChange="incrementSum"/>
            <Counter value="5" onChange="incrementSum"/>
        </div>
        <p>
            The sum is:
            <t t-esc="state.sum"/>
        </p>
        <div class="border">
            <Card title="'Escaped Content'"/>
            <Card title="'Markup Example'">
                <h3>Card Text</h3>
                <Counter value="5" onChange="incrementSum"/>
            </Card>
        </div>
        <div>
            <TodoList />
        </div>
    </t>
</templates>